{
  "name": "Night Eyes",
  "description": "You have eyes that can see in completely dark areas for a duration of time.",
  "type": "origins:multiple",
  "effect": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:apply_effect",
      "effect": {
        "effect": "minecraft:night_vision",
        "duration": 400
      }
    },
    "falling_action": {
      "type": "origins:clear_effect",
      "effect": "minecraft:night_vision"
    },
    "condition": {
      "type": "origins:power_active",
      "power": "*:*_toggle"
    }
  },
  "instant_trigger": {
    "type": "origins:active_self",
    "key": {
      "key": "key.origins.secondary_active"
    },
    "entity_action": {
      "type": "origins:apply_effect",
      "effect": {
        "effect": "minecraft:night_vision",
        "duration": 400
      }
    },
    "condition": {
      "type": "origins:power_active",
      "power": "*:*_toggle"
    }
  },
  "toggle": {
    "type": "origins:toggle",
    "active_by_default": false,
    "key": {
      "key": "key.origins.secondary_active"
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_energy",
          "comparison": ">=",
          "compare_to": 36
        }
      ]
    }
  },
  "toggle_disable_key_low": {
    "type": "origins:active_self",
    "key": {
      "key": "key.origins.secondary_active"
    },
    "condition": {
      "type": "origins:and",
      "__comment": "Allow disabling when below minimum activation energy",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_energy",
          "comparison": "<",
          "compare_to": 36
        },
        {
          "type": "origins:power_active",
          "power": "*:*_toggle"
        }
      ]
    },
    "entity_action": {
      "type": "origins:toggle",
      "power": "*:*_toggle"
    }
  },
  "energy": {
    "type": "origins:resource",
    "max": 240,
    "min": 0,
    "min_action": {
      "type": "origins:toggle",
      "power": "*:*_toggle"
    },
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 20,
      "condition": {
        "type": "origins:resource",
        "resource": "*:*_energy",
        "comparison": "<",
        "compare_to": 240
      }
    }
  },
  "energy_tick": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:power_active",
        "power": "*:*_toggle"
      },
      "if_action": {
        "type": "origins:change_resource",
        "resource": "*:*_energy",
        "change": -2
      },
      "else_action": {
        "type": "origins:change_resource",
        "resource": "*:*_energy",
        "change": 1
      }
    }
  },
  "respawn": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:change_resource",
      "resource": "*:*_energy",
      "operation": "set",
      "change": 240
    }
  }
}